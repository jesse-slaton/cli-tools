#!/bin/bash
#
# Pre-commit hook for cli-tools repository
# This hook runs code quality checks on Rust projects before allowing commits
#
# To bypass this hook in emergency situations, use: git commit --no-verify

set -e

# ANSI color codes for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-commit checks...${NC}"

# Flag to track if any check failed
CHECKS_FAILED=0

# Function to print section headers
print_section() {
    echo ""
    echo -e "${BLUE}==>${NC} $1"
}

# Function to print success
print_success() {
    echo -e "${GREEN}✓${NC} $1"
}

# Function to print error
print_error() {
    echo -e "${RED}✗${NC} $1"
}

# Function to print warning
print_warning() {
    echo -e "${YELLOW}!${NC} $1"
}

# Check if any Rust files are being committed
RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(rs|toml)$' || true)

if [ -z "$RUST_FILES" ]; then
    echo -e "${GREEN}No Rust files to check. Skipping Rust quality checks.${NC}"
    exit 0
fi

# Find all Rust projects (directories with Cargo.toml)
RUST_PROJECTS=$(find . -name "Cargo.toml" -not -path "*/target/*" -exec dirname {} \; | sort -u)

if [ -z "$RUST_PROJECTS" ]; then
    echo -e "${YELLOW}No Rust projects found in repository.${NC}"
    exit 0
fi

# Iterate through each Rust project
for PROJECT in $RUST_PROJECTS; do
    PROJECT_NAME=$(basename "$PROJECT")
    echo ""
    echo -e "${BLUE}╔════════════════════════════════════════════════════════════╗${NC}"
    echo -e "${BLUE}║${NC} Checking: ${GREEN}${PROJECT_NAME}${NC}"
    echo -e "${BLUE}╚════════════════════════════════════════════════════════════╝${NC}"

    cd "$PROJECT"

    # Check 1: Cargo Format
    print_section "1. Running cargo fmt..."
    if cargo fmt -- --check > /dev/null 2>&1; then
        print_success "Code formatting is correct"
    else
        print_error "Code formatting issues detected"
        echo -e "${YELLOW}   Run 'cargo fmt' to fix formatting${NC}"
        CHECKS_FAILED=1
    fi

    # Check 2: Clippy
    print_section "2. Running cargo clippy..."
    if cargo clippy --all-targets --all-features -- -D warnings 2>&1 | grep -q "warning:"; then
        print_error "Clippy warnings detected"
        echo -e "${YELLOW}   Fix clippy warnings before committing${NC}"
        cargo clippy --all-targets --all-features -- -D warnings
        CHECKS_FAILED=1
    else
        if cargo clippy --all-targets --all-features -- -D warnings > /dev/null 2>&1; then
            print_success "No clippy warnings"
        else
            print_error "Clippy check failed"
            cargo clippy --all-targets --all-features -- -D warnings
            CHECKS_FAILED=1
        fi
    fi

    # Check 3: Build check
    print_section "3. Running cargo check..."
    if cargo check --all-targets > /dev/null 2>&1; then
        print_success "Build check passed"
    else
        print_error "Build check failed"
        echo -e "${YELLOW}   Run 'cargo check' to see errors${NC}"
        CHECKS_FAILED=1
    fi

    # Check 4: Tests
    print_section "4. Running cargo test..."
    if cargo test --all-targets > /dev/null 2>&1; then
        print_success "All tests passed"
    else
        print_error "Tests failed"
        echo -e "${YELLOW}   Run 'cargo test' to see failures${NC}"
        CHECKS_FAILED=1
    fi

    # Check 5: Documentation (non-blocking)
    print_section "5. Checking documentation..."
    if cargo doc --no-deps --quiet > /dev/null 2>&1; then
        print_success "Documentation builds successfully"
    else
        print_warning "Documentation has warnings (non-blocking)"
    fi

    # Check 6: Security audit (optional, non-blocking)
    print_section "6. Running security audit..."
    if command -v cargo-audit > /dev/null 2>&1; then
        if cargo audit > /dev/null 2>&1; then
            print_success "No security vulnerabilities detected"
        else
            print_warning "Security vulnerabilities detected (non-blocking)"
            echo -e "${YELLOW}   Run 'cargo audit' for details${NC}"
        fi
    else
        print_warning "cargo-audit not installed (skipping)"
        echo -e "${YELLOW}   Install with: cargo install cargo-audit${NC}"
    fi

    # Return to repository root
    cd - > /dev/null
done

# Final summary
echo ""
echo -e "${BLUE}═══════════════════════════════════════════════════════════${NC}"
if [ $CHECKS_FAILED -eq 0 ]; then
    echo -e "${GREEN}✓ All pre-commit checks passed!${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════════════${NC}"
    exit 0
else
    echo -e "${RED}✗ Pre-commit checks failed!${NC}"
    echo -e "${BLUE}═══════════════════════════════════════════════════════════${NC}"
    echo ""
    echo -e "${YELLOW}Fix the issues above and try again.${NC}"
    echo -e "${YELLOW}To bypass this hook (not recommended): git commit --no-verify${NC}"
    echo ""
    exit 1
fi
